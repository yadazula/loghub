<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <variable name="layout" value="${longdate} ${threadid} ${logger} ${level} ${message} ${exception:format=tostring}" />

  <extensions>
    <add assembly="Gelf4NLog.Target"/>
  </extensions>

  <targets>
    <target type="AsyncWrapper" name="AsyncLog" queueLimit="100000" batchSize="5000">
      <target type="graylog" name="graylog" hostip="127.0.0.1" hostport="11000" facility="perf-test6" />
    </target>
  </targets>

  <rules>
    <logger name="LogHub.*" minlevel="Debug" writeTo="AsyncLog" />
  </rules>
</nlog>